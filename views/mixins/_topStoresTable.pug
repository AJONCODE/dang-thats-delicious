mixin topStoresTable(stores)
  table.table
    thead
      td Photo
      td Ranking
      td Name
      td Reviews
      td Average Rating
    each store, i in stores
      tr
        //- ':' is a replacement for next sub-line (children)
        //- td
        //-   a(href=`/store/${store.slug}`)
        //-     img(width=200 src=`/uploads/${store.photo || store.png}` alt=store.name)
        td: a(href=`/store/${store.slug}`): img(width=200 src=`/uploads/${store.photo || store.png}` alt=store.name)
        td #{i + 1}
        td: a(href=`/store/${store.slug}`) #{store.name}
        td #{store.reviews.length}
        td #{Math.round(store.averageRating * 10) / 10} / 5